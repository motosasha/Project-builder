extends ../pug/layout_default.pug

block variables
  - isMainPage = false
  - pageTitle = 'Стартовая страница'
  - metaDescription = 'description'
  - metaKeywords = 'keywords'

block content
  section.hero
    .grid
      .hero__inner
        h1.hero__title Я заголовок
        p.hero__descr Блок <code>hero</code> сделан с помощью гибкой функции.
        p.hero__descr!= hero.heroString

        .hero__tiles
          .hero__tile
            .hero__tile-descr Иконка из спрайта
            svg.hero__icon
              use(href='img/svgSprite.svg#icon__default')
          .hero__tile.hero__tile--bg
            .hero__tile-descr Иконка из спрайта фоном
        p.hero__descr
          button.hero__trigger Кликни меня!
        .test
