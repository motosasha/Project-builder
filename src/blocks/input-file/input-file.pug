//- Все примеси в этом файле должны начинаться c имени блока (input-file)

mixin input-file(mods, id, name)

  //- Принимает:
  //-   mods    {string} - список модификаторов
  //-   name    {string} - атрибут name
  //-   id      {string} - атрибут id
  //- Вызов:
        +input-file('some-mod', 'file-input', 'file-edu')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + 'input-file--' + modsList[i].trim();
      }
    }

  label.input-file(class= allMods)
    input.input-file__input(type='file', id=id, name=name)&attributes(attributes)
    .input-file__fake-input
      .input-file__title
