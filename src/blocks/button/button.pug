//- Все примеси в этом файле должны начинаться c имени блока (button)

mixin button(type, title, mods, href)
  //- Принимает:
    //-   type    {string} - тип [input|button|submit|reset|link]
    //-   title   {string} - текст кнопки
    //-   mods    {string} - список модификаторов
    //-   href    {string} - адрес, если тип «ссылка»
    //- Вызов:
          +button('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if (typeof (mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' button--' + modsList[i].trim();
      }
    }

  if type === 'input'
    input.button(type='button', class= allMods, value= title)&attributes(attributes)
  if type === 'button'
    button.button(class= allMods)&attributes(attributes)
      .button__title!= title
  if type === 'submit'
    button.button(class= allMods)&attributes(attributes)
      .button__title!= title
  if type === 'reset'
    button.button(class= allMods)&attributes(attributes)
      .button__title!= title
  if type === 'link'
    a.button(class= allMods, href= href)&attributes(attributes)
      .button__title!= title
